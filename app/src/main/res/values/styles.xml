<resources>

    <!-- Tema das caixas de diálogos -->
    <style name="TemaDialogo" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/verde_escuro</item>
    </style>

    <!-- Tema das caixas de diálogos -->
    <style name="TemaBloqueio" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/verde_escuro</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaNovo" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/verde_escuro</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaTabs" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/verde_escuro</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Actionbar tab text appearance -->
    <style name="ActionBarTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Tema da splash screen -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>