<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/widget_fundo"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/tvAbreAplciativo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:background="@color/widget_fundo"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="@string/icone"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/branco" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ibAdicionaConta"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:adjustViewBounds="true"
        android:background="@color/widget_fundo"
        android:contentDescription="@string/icone"
        android:cropToPadding="true"
        android:padding="10dp"
        android:src="@drawable/ic_add_widget" />

    <ImageView
        android:id="@+id/ibPesquisaConta"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:adjustViewBounds="true"
        android:background="@color/widget_fundo"
        android:contentDescription="@string/icone"
        android:cropToPadding="true"
        android:padding="10dp"
        android:src="@drawable/ic_search_widget" />

</LinearLayout>